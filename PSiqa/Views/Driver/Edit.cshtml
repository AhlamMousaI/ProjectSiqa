@model PSiqa.Models.Driver

@{
    ViewData["Title"] = "تعديل سائق";
}

<div class="container mt-4">
    <h2 class="mb-3">تعديل سائق</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-group">
            <label asp-for="FullName" class="control-label">الاسم الكامل</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone" class="control-label">رقم الهاتف</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">تحديث</button>
        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
