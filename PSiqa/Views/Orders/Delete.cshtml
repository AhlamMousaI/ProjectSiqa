@model PSiqa.Models.Order
@{
    ViewData["Title"] = "حذف الطلب";
}

<h1>حذف الطلب</h1>

<h3>هل أنت متأكد أنك تريد حذف هذا الطلب؟</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">الزبون</dt>
        <dd class="col-sm-10">@Model.Customer?.FullName</dd>

        <dt class="col-sm-2">الخزان</dt>
        <dd class="col-sm-10">@Model.Tank?.TankName</dd>

        <dt class="col-sm-2">السائق</dt>
        <dd class="col-sm-10">@Model.Driver?.FullName</dd>

        <dt class="col-sm-2">الكمية</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">الحالة</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">وقت الطلب</dt>
        <dd class="col-sm-10">@Model.OrderTime.ToString("g")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">نعم، احذف</button>
        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
    </form>
</div>
